{
  "name": "note-companion",
  "main": "index.ts",
  "version": "1.0.0",
  "scripts": {
    "clean": "git clean -xdf .expo .turbo node_modules",
    "start": "expo start",
    "android": "expo run:android",
    "dev": "expo run:ios",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "format": "prettier .",
    "format:fix": "prettier . --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "release:ios": "eas build --platform ios",
    "build:android": "eas build --platform android --local",
    "build:ios": "eas build --platform ios --local --profile production --non-interactive",
    "build:ios:remote": "eas build --platform ios --profile production --non-interactive",
    "submit:ios": "eas submit --platform ios --latest --non-interactive",
    
    "build-and-submit:ios": "pnpm run build:ios && eas submit --platform ios --latest --non-interactive"
  },
  "expo": {
    "doctor": {
      "reactNativeDirectoryCheck": {
        "listUnknownPackages": false
      }
    }
  },
  "dependencies": {
    "@babel/runtime": "7.27.6",
    "@clerk/clerk-expo": "^0.20.1",
    "@expo/ngrok": "^4.1.3",
    "@expo/vector-icons": "14.0.2",
    "@react-navigation/bottom-tabs": "^7.2.0",
    "@react-navigation/native": "^7.0.14",
    "@types/crypto-js": "^4.2.2",
    "crypto-js": "^4.2.0",
    "expo": "~52.0.11",
    "expo-apple-authentication": "~7.1.3",
    "expo-application": "^6.0.2",
    "expo-asset": "~11.0.5",
    "expo-blur": "14.0.3",
    "expo-build-properties": "^0.13.1",
    "expo-camera": "~16.0.18",
    "expo-constants": "~17.0.3",
    "expo-crypto": "~14.0.2",
    "expo-document-picker": "~13.0.3",
    "expo-font": "13.0.4",
    "expo-haptics": "^14.0.0",
    "expo-image-manipulator": "^13.0.6",
    "expo-image-picker": "^16.0.3",
    "expo-linking": "~7.0.3",
    "expo-localization": "^16.1.5",
    "expo-media-library": "~17.0.6",
    "expo-notifications": "^0.29.13",
    "expo-router": "~4.0.20",
    "expo-secure-store": "^14.0.0",
    "expo-share-intent": "^3.2.2",
